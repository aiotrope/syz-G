{
  "name": "xzymous",
  "version": "1.0.0",
  "description": "CT30A3204 capstone project.",
  "main": "./server/dist/index.js",
  "engines": {
    "node": "18.16.1"
  },
  "scripts": {
    "build:client": "cd client && rimraf build/ && yarn build",
    "build:server": "cd server && rimraf dist/ && yarn build",
    "build": "yarn install --frozen-lockfile && npm-run-all build:client",
    "dev:server": "NODE_ENV=development cd server/ && yarn dev",
    "dev:client": "NODE_ENV=development cd client/ && yarn dev",
    "dev": "concurrently \"yarn run dev:server\" \"yarn run dev:client\"",
    "start": "cd server/ && yarn start",
    "format:client": "cd client/ && yarn format",
    "format:server": "cd server/ && yarn format",
    "format": "npm-run-all format:client format:server",
    "lint:client": "cd client/ && yarn run lint",
    "lint:server": "cd server/ && yarn run lint",
    "lint": "npm-run-all lint:client lint:server"
  },
  "cacheDirectories": [
    "server/node_modules",
    "client/node_modules"
  ],
  "repository": "git@github.com-aiotrope:aiotrope/xzymous.git",
  "author": "Arnel Imperial",
  "license": "0BSD",
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1"
  }
}

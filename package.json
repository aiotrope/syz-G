{
  "name": "xzymous",
  "version": "1.0.0",
  "description": "CT30A3204 capstone project.",
  "main": "./server/dist/index.js",
  "engines": {
    "node": "16.20.1"
  },
  "scripts": {
    "build:client": "cd client && yarn run build",
    "build:server": "cd server && yarn run build",
    "build": "yarn install --frozen-lockfile && npm-run-all build:server build:client",
    "dev:server": "NODE_ENV=development cd server/ && yarn run dev",
    "dev:client": "NODE_ENV=development cd client/ && npm start",
    "start": "NODE_ENV=production cd server/ && yarn run start",
    "format:client": "cd client/ && yarn run format",
    "format:server": "cd server/ && yarn run format",
    "format": "yarn run format:client && yarn run format:server",
    "lint:client": "cd client/ && yarn run lint",
    "lint:server": "cd server/ && yarn run lint",
    "lint": "yarn run lint:client && yarn run lint:server"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-aiotrope:aiotrope/xzymous.git"
  },
  "author": "Arnel Imperial",
  "license": "0BSD",
  "cacheDirectories": [
    "server/node_modules",
    "client/node_modules"
  ],
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1"
  }
}
